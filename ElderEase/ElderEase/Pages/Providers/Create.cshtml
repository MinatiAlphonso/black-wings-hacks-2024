@page
@model ElderEase.Pages.Providers.CreateModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Provider</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Provider.firstName" class="control-label"></label>
                <input asp-for="Provider.firstName" class="form-control" />
                <span asp-validation-for="Provider.firstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Provider.lastName" class="control-label"></label>
                <input asp-for="Provider.lastName" class="form-control" />
                <span asp-validation-for="Provider.lastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Provider.email" class="control-label"></label>
                <input asp-for="Provider.email" class="form-control" />
                <span asp-validation-for="Provider.email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Provider.phone" class="control-label"></label>
                <input asp-for="Provider.phone" class="form-control" />
                <span asp-validation-for="Provider.phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Provider.city" class="control-label"></label>
                <input asp-for="Provider.city" class="form-control" />
                <span asp-validation-for="Provider.city" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Provider.state" class="control-label"></label>
                <input asp-for="Provider.state" class="form-control" />
                <span asp-validation-for="Provider.state" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Provider.country" class="control-label"></label>
                <input asp-for="Provider.country" class="form-control" />
                <span asp-validation-for="Provider.country" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Provider.zipCode" class="control-label"></label>
                <input asp-for="Provider.zipCode" class="form-control" />
                <span asp-validation-for="Provider.zipCode" class="text-danger"></span>
            </div>            
            <div class="form-group">
                <label asp-for="Provider.password" class="control-label"></label>
                <input asp-for="Provider.password" class="form-control" />
                <span asp-validation-for="Provider.password" class="text-danger"></span>
            </div>

            <button id="addRow" type="button" class="btn btn-info">Add</button>
                <div id="newRow">
                    <input type="hidden" id="total" value="0" />
                </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Back to List</a>
</div>

@section Scripts {
    <script>
        $("#addRow").click(function () {
            var rowCount = parseInt($("#total").val());
            rowCount++;
            $("#total").val(rowCount);
            var index = rowCount - 1;

            var html = '<div id="inputRow_' + index + '">';
            html += '<div class="form-group">';
            html += '<label class="control-label">Service Name</label>';
            html += '<select name="serviceNames" class="form-control" id="serviceNames_' + index + '"></select>';
            html += '</div>';

            html += '<div class="form-group">';
            html += '<label class="control-label">Is Available</label>';
            html += '<input type="checkbox" name="isAvailable" class="form-check-input" />';
            html += '</div>';

            html += '<div class="form-group">';
            html += '<label class="control-label">Service Type</label>';
            html += '<select name="serviceTypes" class="form-control">';
            html += '<option value="Paid">Paid</option>';
            html += '<option value="Free">Free</option>';
            html += '</select>';
            html += '</div>';

            html += '<button type="button" class="btn btn-danger" onclick="removeRow(' + index + ')">Remove Service</button>';
            html += '</div>';

            $('#newRow').append(html);

            // Populate the service name dropdown
            var serviceNameDropdown = document.getElementById('serviceNames_' + index);
            var serviceNames = @Html.Raw(Json.Serialize(Model.ServiceNameList));
            serviceNames.forEach(function (serviceName) {
                var option = document.createElement('option');
                option.value = serviceName.value;
                option.text = serviceName.text;
                serviceNameDropdown.add(option);
            });
        });

        function removeRow(index) {
            var rowCount = parseInt($("#total").val());
            rowCount--;
            $("#total").val(rowCount);
            $('#inputRow_' + index).remove();
        }
    </script>

}
